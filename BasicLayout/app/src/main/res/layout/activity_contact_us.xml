<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp"
            android:background="#00FF1D"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="←"
                android:textColor="#120404"
                android:textSize="34sp" />



            <TextView
                android:id="@+id/tvContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT US"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/baseline_location_on_24" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Kampus Bina Widya KM. 12.5, Simpang Baru, Kec. Tampan, Kota Pekanbaru, Riau 28293" />

        <ImageView
            android:id="@+id/imgEmail"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_attach_email_24" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="abidd166@gmail.com" />

        <ImageView
            android:id="@+id/imgPhone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_phone_24" />

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="(+62)123-4567-8910" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_access_time_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Jam Operasional Kerja\nSenin s/d Kamis\n08.00 - 17.00\nJum'at\n08.00 - 15.00" />
    </LinearLayout>
</ScrollView>